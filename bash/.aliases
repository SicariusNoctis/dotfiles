# List available commands
alias list='compgen -c'
alias commands='compgen -c'

# Grep
alias g='grep -i'

# Listing
alias ll='ls -l'
alias ls='ls --color=auto -h --group-directories-first'
alias lsd='ls -d */'
alias lsl='ls -al'
alias lsg='ls -al | g'
alias lsp='ls -al | p'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../../'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'
alias ........='cd ../../../../../../..'

# percol
alias p='percol'

# vim
alias v='nvim'
alias vim='nvim'

# git
alias ga='git add'
alias gc='git commit'
alias gca='git commit -a'
alias gcam='git commit -am'
alias gcm='git commit -m'
alias gd='git diff'
alias gl='git log --graph --full-history --all --color --oneline'
alias gla='git log --graph --decorate $(git rev-list -g --all)'
alias gst='git status'

# Copy paste
alias pbcopy='xclip -selection c'
alias pbpaste='xclip -selection clipboard -o'

# Statistics
alias class='xprop | grep WM_CLASS'
alias count='ls -1 | wc -l'
alias diskusage='du -sh'
alias perm='stat -c "%a %n"'

# emoji
alias lenny='emoji -lc'
alias shruggie='emoji -sc'

# Selfspy
alias sspy='rm -f -- ~/.selfspy/selfspy.pid.lock && selfspy'

# Sudo
alias sudo='sudo '   # make sudo work with aliases
alias s='sudo'
alias se='sudo -e'

# Pacman
alias sp='sudo pacman'
alias sps='sudo pacman -S'

# AUR Package managers: yaourt
alias yao='yaourt'

# AUR Package managers: pacaur
alias pac='pacaur --noedit --noconfirm'
alias pacs='pac -S'
alias pacu='pacaur -Syyu'
alias pacua='pacaur -Syyua'

# Update ~/.locate.db
alias updatelocate='updatedb --require-visibility 0 -o ~/.locate.db'

# GPG
alias gpgaddkey="gpg --recv-keys"

# File opening
alias b='bgrnd'
alias o='bgrnd gvfs-open'

# Thunar
alias th='bgrnd thunar'

# Config
alias aliases='vim ~/.aliases'
alias bashrc='vim ~/.bashrc'
alias vimrc='vim ~/.vimrc'
alias zshrc='vim ~/.zshrc'
alias i3config='vim ~/.config/i3/config'
alias i3bconfig='vim ~/.config/i3blocks/config'
alias pythonstartup='sudo -e /usr/local/share/pythonstartup.py'

# Todo
alias todo='vim ~/Dropbox/Misc/Notepad/todo.md'

# GNU Parallel - Remove annoying citation message...
alias parallel='parallel --will-cite'

# Buildozer
alias builddebug='buildozer android debug deploy run'
alias buildlogcat='buildozer android adb -- logcat -s python'

