; polybar config file
; vim:ft=dosini

[bar/top]
width = 100%
height = 24

background = #aa000000
foreground = #ccffffff
line-color = ${bar/top.foreground}
line-size = 2
module-margin = 2
padding-right = 2

font-0 = NotoSans-Regular:size=10.5;3
font-1 = FontAwesome5Free:style=Solid:size=10;2
font-2 = FontAwesome5Brands:style=Solid:size=10;2
font-3 = MaterialIcons:size=10;3
font-4 = Roboto:size=10;0

tray-background = #330000
tray-position = right

modules-left = i3 gpmdp
modules-center = title
modules-right = updates bandwidth ping cpu temperature pulseaudio date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
# todo double-click-middle
click-middle = i3-msg "kill"

[module/i3]
type = internal/i3
format = <label-state>
label-focused-background = #88000000
label-focused-padding = 2
label-unfocused-padding = 1
strip-wsnumbers = true
wrapping-scroll = false

[module/progress]
type = custom/script
exec = ~/.config/polybar/scripts/progress
interval = 5

[module/gpmdp]
type = custom/script
exec = ~/.config/i3blocks/scripts/gpmdp --layout A-t-p
interval = 10
format-foreground = #8CE000

[module/title]
type = internal/xwindow
label-maxlen = 60

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-combined.sh
interval = 43200
format-prefix = " "

[module/bandwidth]
type = custom/script
exec = ~/.config/i3blocks/scripts/bandwidth
interval = 1
format-foreground = #66cc00

[module/ping]
type = custom/script
exec = ~/.config/polybar/scripts/ping 8.8.8.8
;exec = ~/.config/polybar/scripts/ping 104.160.131.3
interval = 15

[module/filesystem]
type = internal/fs
interval = 30
label-mounted =  %free%
mount-0 = /

[module/memory]
type = internal/memory
interval = 15
format-prefix = " "
label = %gb_used%
fixed-values = true

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " "

[module/temperature]
type = internal/temperature
interval = 5
format-prefix = " "
label-warn-foreground = #ff7777
warn-temperature = 60

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted =   muted
label-muted-foreground = #66
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

[module/date]
type = internal/date
date =   %Y-%m-%d  %H:%M:%S
date-alt = %A, %d %B %Y  %H:%M:%S

