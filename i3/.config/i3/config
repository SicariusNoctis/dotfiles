# i3 config file (v4)

### USER VARIABLES ###

# Main modifier keys
set $mod  Mod4
set $mod_ Mod1

# Named workspaces
#               
#  
set $ws1   "1:"
set $ws2   "2:"
set $ws3   "3:"
set $ws4   "4:"
set $ws5   "5:5"
set $ws6   "6:6"
set $ws7   "7:7"
set $ws8   "8:"
set $ws9   "9:"
set $ws10  "10:10"
set $ws666 "666:"

# Flags
set $nsi            --no-startup-id

# Wallpaper paths
set $wallpaper      /usr/share/backgrounds/000current.jpg
set $lock_wallpaper /usr/share/backgrounds/001current.png

# Common style options
set $rofi_style     -lines 10 -hide-scrollbar -separator-style none -line-padding 4 -bw 2 -font 'Roboto Mono 14' -kb-row-select 'Tab' -kb-row-tab ''

# File search
# Create database:  updatedb --require-visibility 0 -o ~/.locate.db
set $list_files     locate -d ~/.locate.db $HOME/Downloads /mnt/data | \
                    grep -vP '^/mnt/data/((code/OpenCV-android-sdk)|(Dropbox/((Apps/)|(Backup/Android/)|(Camera Uploads/.*\..*$)))|(Games/)|(matlab_install/)).*$' | \
                    grep -vP '^/mnt/data2/((ProgFiles/)).*$' | \
                    grep -vP '/\.'

# Download scripts from https://github.com/SicariusNoctis/frequency-index-scripts
set $rofi_dir       ~/code/frequency-index-scripts/examples/rofi_dir.sh
set $rofi_emoji     ~/code/frequency-index-scripts/examples/rofi_emoji.sh

# Sound control
set $amixer         amixer -q -D pulse set Master
set $vol_change     pkill -SIGRTMIN+1 i3blocks

# Screenshot path
set $screen_path    $HOME/Downloads/$(date '+%Y-%m-%d  %H-%M-%S  %3N.png')


### DEFAULT BINDINGS ###

# Kill window
bindsym $mod+shift+q            kill

# Terminal
bindsym $mod+Return             exec alacritty

# Focus window
bindsym $mod+h                  focus left
bindsym $mod+j                  focus down
bindsym $mod+k                  focus up
bindsym $mod+l                  focus right

bindsym $mod+Left               focus left
bindsym $mod+Down               focus down
bindsym $mod+Up                 focus up
bindsym $mod+Right              focus right

# Layout
#bindsym $mod+s layout           stacking
#bindsym $mod+w layout           tabbed
#bindsym $mod+e layout           toggle split

# Split
bindsym $mod+v                  split v
bindsym $mod+shift+v            split h

# Fullscreen
bindsym $mod+f                  fullscreen toggle

# Floating
bindsym $mod+s                  focus mode_toggle
bindsym $mod+shift+s            floating toggle

# Focus parent/child
bindsym $mod+a                  focus parent
bindsym $mod+shift+a            focus child

# Workspace switching
bindsym $mod+1                  workspace $ws1
bindsym $mod+2                  workspace $ws2
bindsym $mod+3                  workspace $ws3
bindsym $mod+4                  workspace $ws4
bindsym $mod+5                  workspace $ws5
bindsym $mod+6                  workspace $ws6
bindsym $mod+7                  workspace $ws7
bindsym $mod+8                  workspace $ws8
bindsym $mod+9                  workspace $ws9
bindsym $mod+0                  workspace $ws10

# Move to workspace
bindsym $mod+shift+1            move container to workspace $ws1;  workspace $ws1
bindsym $mod+shift+2            move container to workspace $ws2;  workspace $ws2
bindsym $mod+shift+3            move container to workspace $ws3;  workspace $ws3
bindsym $mod+shift+4            move container to workspace $ws4;  workspace $ws4
bindsym $mod+shift+5            move container to workspace $ws5;  workspace $ws5
bindsym $mod+shift+6            move container to workspace $ws6;  workspace $ws6
bindsym $mod+shift+7            move container to workspace $ws7;  workspace $ws7
bindsym $mod+shift+8            move container to workspace $ws8;  workspace $ws8
bindsym $mod+shift+9            move container to workspace $ws9;  workspace $ws9
bindsym $mod+shift+0            move container to workspace $ws10; workspace $ws10

# Restart/reload i3
bindsym $mod+shift+r            restart


### USER BINDINGS ###

# Mouse (scroll wheel) bindings
bindsym --whole-window --border $mod+Button4        workspace prev
bindsym --whole-window --border $mod+Button5        workspace next
bindsym --whole-window --border $mod+shift+Button4  focus left
bindsym --whole-window --border $mod+shift+Button5  focus right
bindsym --whole-window --border $mod+ctrl+Button4   exec $nsi $amixer 1%+ && $vol_change
bindsym --whole-window --border $mod+ctrl+Button5   exec $nsi $amixer 1%- && $vol_change
bindsym --border                Button2             kill

# Workspace switch back/forth
bindsym $mod+grave              workspace back_and_forth

# Workspace switch back/forth and move
bindsym $mod+shift+grave        move container to workspace back_and_forth; workspace back_and_forth

# Next/previous windows
bindsym $mod_+Tab               focus right
bindsym $mod_+shift+Tab         focus left

# Workspace cycling
bindsym $mod+shift+Tab          workspace prev
bindsym $mod+Tab                workspace next
bindsym $mod+ctrl+h             workspace prev
bindsym $mod+ctrl+l             workspace next
bindsym $mod+ctrl+Left          workspace prev
bindsym $mod+ctrl+Right         workspace next

# Workspace cycling and moving
#bindsym $mod+ctrl+shift+h       move container to workspace prev; workspace prev
#bindsym $mod+ctrl+shift+l       move container to workspace next; workspace next
#bindsym $mod+ctrl+shift+Left    move container to workspace prev; workspace prev
#bindsym $mod+ctrl+shift+Right   move container to workspace next; workspace next

# Move window
bindsym $mod+shift+h            move left
bindsym $mod+shift+j            move down
bindsym $mod+shift+k            move up
bindsym $mod+shift+l            move right

bindsym $mod+shift+Left         move left
bindsym $mod+shift+Down         move down
bindsym $mod+shift+Up           move up
bindsym $mod+shift+Right        move right

# Move window (fast)
bindsym $mod+shift+ctrl+h       move left  100px
bindsym $mod+shift+ctrl+j       move down  100px
bindsym $mod+shift+ctrl+k       move up    100px
bindsym $mod+shift+ctrl+l       move right 100px

bindsym $mod+shift+ctrl+Left    move left  100px
bindsym $mod+shift+ctrl+Down    move down  100px
bindsym $mod+shift+ctrl+Up      move up    100px
bindsym $mod+shift+ctrl+Right   move right 100px

# Gaps
bindsym $mod+period             gaps inner all plus  5
bindsym $mod+shift+period       gaps inner all minus 5
bindsym $mod+slash              gaps outer all plus  5
bindsym $mod+shift+slash        gaps outer all minus 5

# Window property control
bindsym $mod+b                  border toggle
bindsym $mod+shift+b            border normal
bindsym $mod+shift+minus        move scratchpad
bindsym $mod+minus              scratchpad show
bindsym $mod+g                  sticky toggle
bindsym $mod+shift+g            floating enable, sticky enable, resize set 1000 600, exec $nsi ~/.config/i3/scripts/move bottom right
bindsym $mod+$mod_+c            move position center

# Window snap floating to edge
bindcode $mod+87                exec $nsi ~/.config/i3/scripts/move bottom left
bindcode $mod+88                exec $nsi ~/.config/i3/scripts/move bottom center
bindcode $mod+89                exec $nsi ~/.config/i3/scripts/move bottom right
bindcode $mod+83                exec $nsi ~/.config/i3/scripts/move middle left
bindcode $mod+84                exec $nsi ~/.config/i3/scripts/move middle center
bindcode $mod+85                exec $nsi ~/.config/i3/scripts/move middle right
bindcode $mod+79                exec $nsi ~/.config/i3/scripts/move top left
bindcode $mod+80                exec $nsi ~/.config/i3/scripts/move top center
bindcode $mod+81                exec $nsi ~/.config/i3/scripts/move top right

# Volume control
bindsym XF86AudioLowerVolume    exec $nsi $amixer 5%-    && $vol_change
bindsym XF86AudioRaiseVolume    exec $nsi $amixer 5%+    && $vol_change
bindsym XF86AudioMute           exec $nsi $amixer toggle && $vol_change

bindsym $mod+z                  exec $nsi $amixer 5%+    && $vol_change
bindsym $mod+shift+z            exec $nsi $amixer 5%-    && $vol_change
bindsym $mod+ctrl+z             exec $nsi $amixer toggle && $vol_change

bindsym $mod+comma              exec $nsi $amixer 1%+    && $vol_change
bindsym $mod+shift+comma        exec $nsi $amixer 1%-    && $vol_change

# Media control
bindsym XF86AudioPlay           exec $nsi playerctl play-pause
bindsym XF86AudioPause          exec $nsi playerctl pause
bindsym XF86AudioNext           exec $nsi playerctl next
bindsym XF86AudioPrev           exec $nsi playerctl prev

bindsym $mod+ctrl+x             exec $nsi playerctl play-pause
bindsym $mod+x                  exec $nsi playerctl volume 0.05+
bindsym $mod+shift+x            exec $nsi playerctl volume 0.05-

# Lyrics
bindsym $mod+$mod_+shift+x      exec $nsi termite -e lyvi -t lyvi

# rofi (app launcher, sudo app launcher, file search, folder search, window jumper)
bindsym $mod+q                  exec "rofi $rofi_style -p 'run'        -combi-modi drun,run -show combi -modi combi"
bindsym $mod+ctrl+q             exec "rofi $rofi_style -p 'run (sudo)' -combi-modi drun,run -show combi -modi combi -run-command 'gksudo {cmd}'"
bindsym $mod+ctrl+d             exec eval "$rofi_dir   $rofi_style -p 'folders' -i -levenshtein-sort"
bindsym $mod+ctrl+e             exec eval "$rofi_emoji $rofi_style -p 'emojis'  -i -levenshtein-sort"
bindsym $mod+d                  exec "$list_files | rofi $rofi_style -p 'files'  -dmenu -i -levenshtein-sort | xargs -I {} gio open {}"
bindsym $mod+shift+d            exec "wmctrl -l   | rofi $rofi_style -p 'window' -dmenu -i -levenshtein-sort | cut -d ' ' -f1 | xargs -I {} i3-msg '[id=\\"{}\\"] focus'"

# Lock screen
bindsym $mod+$mod_+z            exec $nsi ~/.config/i3/scripts/lock $ws666 $lock_wallpaper

# Jump to urgent window
bindsym $mod+u                  [urgent=latest] focus

# Screenshot (cropped, cropped + edit, full, full + cursor, active, active + cursor)
bindsym            Print        exec maim -u -s "$screen_path"
bindsym ctrl+shift+Print        exec "f=$screen_path && maim -u -s \\"$f\\" && gthumb \\"$f\\""
bindsym       ctrl+Print        exec maim -u "$screen_path"
bindsym  $mod+ctrl+Print        exec maim    "$screen_path"
bindsym      shift+Print        exec maim -u -i $(xdotool getactivewindow) "$screen_path"
bindsym $mod+shift+Print        exec maim    -i $(xdotool getactivewindow) "$screen_path"

# Screencapture
# TODO

# Color picker
bindsym $mod+p                  exec gcolor2

# Shortcuts: open/switch to
bindsym $mod+$mod_+f            exec ~/.config/i3/scripts/switchto "firefox"              "Firefox"
bindsym $mod+$mod_+g            exec ~/.config/i3/scripts/switchto "google-chrome-stable" "Chrome"
bindsym $mod+$mod_+o            exec ~/.config/i3/scripts/switchto "okular"               "Okular"
bindsym $mod+$mod_+b            exec ~/.config/i3/scripts/switchto "qbittorrent"          "qBittorrent"
bindsym $mod+$mod_+s            exec ~/.config/i3/scripts/switchto "subl"                 "subl"
bindsym $mod+$mod_+x            exec ~/.config/i3/scripts/switchto "gpmdp"                "Google Play Music Desktop Player"

# Thunar
bindsym $mod+t                  exec thunar

# Thunar > Downloads
bindsym $mod+shift+t            exec thunar ~/Downloads

# Python terminal (i.e. calculator)
bindsym $mod+c                  exec $nsi termite -e ptpython  -t "python scratchpad"
bindsym $mod+shift+c            exec $nsi termite -e ptipython -t "ipython scratchpad"

# termite transparency
# bindsym $mod+semicolon          exec $nsi ~/.config/i3/scripts/termite_transparency ' + 0.01'
# bindsym $mod+shift+semicolon    exec $nsi ~/.config/i3/scripts/termite_transparency ' - 0.01'

# Redshift control
bindsym $mod+m                  exec $nsi rs $(($(cat ~/.rshift) + 200))
bindsym $mod+shift+m            exec $nsi rs $(($(cat ~/.rshift) - 200))
bindsym $mod+ctrl+m             exec $nsi rs 4000
bindsym $mod+ctrl+shift+m       exec $nsi rs 6500

# Resize window
bindsym $mod+$mod_+h            exec $nsi ~/.config/i3/scripts/resize shrink width  5
bindsym $mod+$mod_+j            exec $nsi ~/.config/i3/scripts/resize grow   height 5
bindsym $mod+$mod_+k            exec $nsi ~/.config/i3/scripts/resize shrink height 5
bindsym $mod+$mod_+l            exec $nsi ~/.config/i3/scripts/resize grow   width  5

bindsym $mod+$mod_+Left         exec $nsi ~/.config/i3/scripts/resize shrink width  5
bindsym $mod+$mod_+Down         exec $nsi ~/.config/i3/scripts/resize grow   height 5
bindsym $mod+$mod_+Up           exec $nsi ~/.config/i3/scripts/resize shrink height 5
bindsym $mod+$mod_+Right        exec $nsi ~/.config/i3/scripts/resize grow   width  5

bindsym $mod+$mod_+shift+h      exec $nsi ~/.config/i3/scripts/resize shrink width  1
bindsym $mod+$mod_+shift+j      exec $nsi ~/.config/i3/scripts/resize grow   height 1
bindsym $mod+$mod_+shift+k      exec $nsi ~/.config/i3/scripts/resize shrink height 1
bindsym $mod+$mod_+shift+l      exec $nsi ~/.config/i3/scripts/resize grow   width  1

bindsym $mod+$mod_+shift+Left   exec $nsi ~/.config/i3/scripts/resize shrink width  1
bindsym $mod+$mod_+shift+Down   exec $nsi ~/.config/i3/scripts/resize grow   height 1
bindsym $mod+$mod_+shift+Up     exec $nsi ~/.config/i3/scripts/resize shrink height 1
bindsym $mod+$mod_+shift+Right  exec $nsi ~/.config/i3/scripts/resize grow   width  1

bindsym $mod+$mod_+ctrl+h       exec $nsi ~/.config/i3/scripts/resize shrink width  20
bindsym $mod+$mod_+ctrl+j       exec $nsi ~/.config/i3/scripts/resize grow   height 20
bindsym $mod+$mod_+ctrl+k       exec $nsi ~/.config/i3/scripts/resize shrink height 20
bindsym $mod+$mod_+ctrl+l       exec $nsi ~/.config/i3/scripts/resize grow   width  20

bindsym $mod+$mod_+ctrl+Left    exec $nsi ~/.config/i3/scripts/resize shrink width  20
bindsym $mod+$mod_+ctrl+Down    exec $nsi ~/.config/i3/scripts/resize grow   height 20
bindsym $mod+$mod_+ctrl+Up      exec $nsi ~/.config/i3/scripts/resize shrink height 20
bindsym $mod+$mod_+ctrl+Right   exec $nsi ~/.config/i3/scripts/resize grow   width  20


